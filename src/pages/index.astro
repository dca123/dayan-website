---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import avatar from '../avatar.png';

const content = Array.from(
  Array(3),
  () =>
    'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. ',
);
---

<Layout title="dayan's life">
  <main class="p-12 space-y-8">
    <div class="flex flex-row justify-between space-x-4">
      <Card href="/my-work" title="my work">
        <div class="space-y-4">
          {content.map((text) => <p>{text}</p>)}
        </div>
      </Card>
      <Card href="/my-work" title="my work">
        <div class="space-y-4">
          {content.map((text) => <p>{text}</p>)}
        </div>
      </Card>
      <Card href="/my-work" title="my work">
        <div class="space-y-4">
          {content.map((text) => <p>{text}</p>)}
        </div>
      </Card>
    </div>
    <div class="flex flex-row space-x-4 justify-center items-center">
      <div class="basis-1/3">
        <Image
          src={avatar}
          alt="Picture of me"
          class="w-[80%] rounded-full border-2 border-zinc-900 bg-zinc-50 shadow-zinc-800 card-shadow ml-[10%]"
        />
      </div>
      <div class="basis-2/3 h-min">
        <Card href="" title="about me">
          <p>
            I'm a twisted, high-powered Senior Researcher at LIRNEasia, a wild
            ride of scholarly rigor and practical expertise. I use data-centric
            methodologies to tackle gnarly issues and spark real change. My
            background is a strange trip - a Bachelor's in Liberal Arts &
            Sciences from the wilds of Quest University (British Columbia),
            where I got deep into computational mathematics and critical theory,
            especially the dark side of security and intelligence studies.
            Before joining this circus, I was knee-deep in public policy
            research, focused on the twisted world of political media. I
            consulted for some wild characters - political bodies and NGOs in
            Canada and Sri Lanka.
          </p>
        </Card>
      </div>
    </div>
  </main>
</Layout>

<style>
  .card-shadow {
    box-shadow: var(--tw-shadow-color) 7px 7px;
  }
</style>
