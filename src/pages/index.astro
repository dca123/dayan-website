---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import avatar from '../avatar.png';
import { getCollection } from 'astro:content';

const myWriting = await getCollection('writing');
---

<Layout title="dayan's life">
  <main class="space-y-10 p-12">
    <div class="flex flex-row justify-between space-x-4">
      <Card title="my writing" content={myWriting.slice(0, 3)} />
      <Card title="my work" content={[]} />
      <Card title="my work" content={[]} />
    </div>
    <div class="flex flex-row items-center justify-center space-x-4">
      <div class="basis-1/3">
        <Image
          src={avatar}
          alt="Picture of me"
          class="card-shadow ml-[10%] w-[80%] rounded-full border-2 border-zinc-900 bg-zinc-50 shadow-zinc-800"
        />
      </div>
      <div class="h-min basis-2/3">
        <div
          title="about me"
          class="card-shadow w-full space-y-4 rounded-lg border-2 border-zinc-900 bg-zinc-50 p-6 pb-8 shadow-zinc-800"
        >
          <div class="ml-1 space-y-1">
            <p>
              I like symbols, both words and numbers. My research in language is
              driven by this curiosity in how language shapes human experience.
            </p>
            <p>
              I earned a Bachelorâ€™s degree in Liberal Arts & Sciences from Quest
              University (British Columbia), with a focus on mathematics and
              critical theory.
            </p>
            <p>
              Currently, I serve as a Senior Researcher in NLP R&D,(and
              implementation,) and TMT policy. Before that, I consulted at
              McKinsey for 2 years. Both focused on the APAC.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .card-shadow {
    box-shadow: var(--tw-shadow-color) 7px 7px;
  }
</style>
